@model TodoViewModel

@{
    ViewData["Title"] = "Manege your todo list";
}

<div class="panel panel-defaul todo-panel">
    <div class="panel-heading"> @ViewData["Title"] </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>&#x2714;</th>
                <th>Item</th>
                <th>Due</th>
            </tr>
        </thead>
        
        <tbody>
            @foreach(var item in Model.Items)
            {
                <tr>
                    <td>
                        <input type="checkbox" class="done-checkbox">
                    </td>
                    <td>@item.Title</td>
                    <td>@item.DueAt</td>
                </tr>
            }
        </tbody>
        
    </table>

    <div class="panel-footer add-item-form">

    </div>
</div>